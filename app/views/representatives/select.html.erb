<section class="flex flex-col p-5 mb-20">
  <% @representatives.each do |representative| %>
    <div class="mx-2 my-3">
      <div class="card shadow-lg border border-primary p-5">
        <label class="text-lg">Resumo de
          <span class="text-primary">
            <%= representative.name.upcase %>
          </span>em

          <span class="text-primary"><%= @closing %></span>
        </label>

        <% set_calculate_summary(representative.monthly_reports) %>

        <%= render "summary", monthly_reports: representative.monthly_reports, accumulated: representative.monthly_reports %>
        <%= render "totals_by_bank", totals_by_bank: @totals_by_bank, total_count: @totals_count, total_value: @total_bank %>
        <%= render "totals_by_store", totals_by_store: @totals_by_store, total_store: @total_store, total_count_store: @total_count_store %>
        <%= render "note_division", total_in_cash: @total_in_cash, total_marks: @total_marks, total_cash: @total_cash %>
      </div>
    </div>
  <% end %>
</section>
