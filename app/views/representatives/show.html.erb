<div class="flex w-full my-5">
  <div class="card card-body bg-secondary rounded-box grid w-full">
    <div class="flex">
      <h2 class="text-3xl font-bold">Representante:
        <%= @representative.id %>
      </h2>
    </div>

    <ul class="mt-6 flex flex-col gap-4 text-base">
      <li>
        <span class="font-semibold">Nome:</span>
        <%= @representative.name %>
      </li>

      <li>
        <span class="font-semibold">NÃºmero:</span>
        <%= @representative.branch.branch_number.to_s.rjust(3, '0') %>
      </li>

      <li>
        <span class="font-semibold">Filial:</span>
        <%= @representative.branch.name %>
      </li>

      <li>
        <span class="font-semibold">Parceria:</span>
        <%= @representative.partnership %> %
      </li>
    </ul>

    <div class="mt-6 flex justify-center items-center gap-2">
      <button onclick="document.getElementById('edit_representative<%= @representative.id %>').showModal();" class="btn btn-primary btn-wide">
        Editar
      </button>

      <dialog id="edit_representative<%= @representative.id %>" class="modal place-items-center">
        <%= render ModalComponent.new(form: render("form", representative: @representative, branches: @branches, title: "Editar Representante : #{@representative.id}", btn_save: "Atualizar")) %>
      </dialog>

      <%= link_to "Listar Todos", representatives_path, class: "btn btn-primary btn-wide" %>
    </div>
  </div>

  <div class="divider divider-horizontal"></div>

  <div class="card card-body bg-secondary rounded-box grid w-full">
    <div class="flex justify-between">
      <h2 class="text-3xl font-bold">Contas Correntes</h2>
    </div>

    <ul class="mt-6 flex flex-col gap-4 text-base">
      <li>
        <span class="font-semibold">ATIVA</span>

        <a href="#" class="text-primary">
          Clique aqui para <span class="font-semibold">desativar</span> esta conta
        </a>
      </li>

      <li>
        <span class="font-semibold">Banco:</span>
        <%= @representative.id %>
      </li>

      <li>
        <span class="font-semibold">Favorecido:</span>
        <%= @representative.name %>
      </li>
    </ul>

    <div class="mt-6 flex justify-center items-center gap-2">
      <button class="btn btn-primary btn-wide">Editar</button>
      <button class="btn btn-primary btn-wide">Remover</button>
      <button class="btn btn-primary btn-wide">Adicionar nova conta corrente</button>
    </div>
  </div>
</div>
