<section class="flex flex-col gap-5 p-5 mb-20">
  <div class="grid grid-cols-12 mx-10">
    <div class="col-start-1 col-end-11">
      <h1 class="text-2xl font-bold text-primary text-center">Resumo</h1>
    </div>

    <div class="col-start-12">
      <%= link_to "Download PDF",
          download_pdf_representative_path(@representative, kind: "monthly_report"),
          target: "_blank", class: "btn btn-primary w-36"
      %>
    </div>
  </div>

  <div class="card shadow-lg border border-primary p-5">
    <%= render "shared/label_of", representative: @representative, closing: @closing, title: "Resumo de" %>
    <%= render "summary", representative: @representative, monthly_reports: @monthly_reports, accumulated: @accumulated %>
    <%= render "totals_by_bank", totals_by_bank: @totals_by_bank, total_count: @total_count, total_value: @total_value %>
    <%= render "totals_by_store", totals_by_store: @totals_by_store, total_store: @total_store, total_count_store: @total_count_store %>
    <%= render "note_division", total_in_cash: @total_in_cash, total_marks: @total_marks, total_cash: @total_cash %>
  </div>
</section>
