<section class="flex flex-col gap-5 p-5 mb-20">
  <% @representatives.each do |representative| %>
    <div class="grid grid-cols-12 mx-10">
      <div class="col-start-1 col-end-11">
        <h1 class="text-2xl font-bold text-primary text-center">Listagem de EndereÃ§os</h1>
      </div>

      <div class="col-start-12">
        <%= render ButtonLinkComponent.new(label: "Gerar PDF", url: download_pdf_representative_path(representative, kind: "unaccumulated_addresses")) %>
      </div>
    </div>

    <div class="card shadow-lg border border-primary p-5">
      <label class="text-lg">
        Clientes de
        <span class="text-primary"><%= representative.name.upcase %></span> em
        <span class="text-primary"><%= @closing %></span>
      </label>

      <%= render "shared/address", prescribers: @prescribers[representative.id] %>
    </div>
  <% end %>
</section>
