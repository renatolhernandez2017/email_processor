<div class="flex items-center justify-center my-10">
  <div class="w-full max-w-2xl">
    <div class="card bg-base-200 shadow-xl">
      <div class="card-body">
        <div class="flex items-center justify-between mb-6">
          <h2 class="card-title !text-3xl">Log #<%= @processing_log.id %></h2>

          <% if @processing_log.success? %>
            <div class="badge badge-success badge-lg">‚úì Sucesso</div>
          <% else %>
            <div class="badge badge-error badge-lg">‚úó Falha</div>
          <% end %>
        </div>

        <div class="divider"></div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Arquivo -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-bold">üìé Arquivo</span>
            </label>

            <input type="text" value="<%= @email_file.path %>" class="input input-bordered w-full" disabled />
          </div>

          <!-- Dados extra√≠dos -->
          <div class="form-control lg:col-span-2">
            <label class="label">
              <span class="label-text font-bold">üìä Dados Extra√≠dos</span>
            </label>

            <textarea class="textarea textarea-bordered font-mono text-sm h-48 w-full" disabled>
              <%= JSON.pretty_generate(@processing_log.extracted_data || {}) %>
            </textarea>
          </div>

          <% if @processing_log.error_message.present? %>
            <div class="form-control lg:col-span-2">
              <label class="label">
                <span class="label-text font-bold text-error">‚ö†Ô∏è Erro</span>
              </label>

              <textarea class="textarea textarea-error font-mono text-sm h-32 w-full" disabled>
                <%= @processing_log.error_message %>
              </textarea>
            </div>
          <% end %>
        </div>

        <div class="card-actions justify-start mt-8">
          <%= link_to "‚Üê Voltar", processing_logs_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
