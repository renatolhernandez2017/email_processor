<div class="card border border-primary mt-2 <%= index % 2 == 0 ? "bg-gray-200" : "bg-gray-100" %>">
  <div class="m-5">
    <table class="table-auto w-full text-sm font-semibold text-center">
      <thead class="text-base">
        <tr>
          <th>Endereço</th>
          <th>Telefone 1</th>
          <th>Telefone 2</th>
          <th>Fax</th>
          <th>Ações</th>
        </tr>
      </thead>

      <tbody>
        <tr class="bg-white border">
          <td><%= full_address %></td>
          <td><%= address.phone %></td>
          <td><%= address.cellphone %></td>
          <td><%= address.fax %></td>

          <td>
            <button onclick="document.getElementById('edit_address<%= address.id %>').showModal();" title="Editar Endereço">
              <span class="material-symbols-outlined text-primary">edit</span>
            </button>

            <dialog id="edit_address<%= address.id %>" class="modal place-items-center">
              <%= render ModalComponent.new(form: render("form_address", prescriber: prescriber, address: address, title: "Editar Endereço : #{address.id}", btn_save: "Atualizar")) %>
            </dialog>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
