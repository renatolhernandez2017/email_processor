<%= turbo_frame_tag 'form_branch' do %>
  <%= form_with model: branch, url: branch.persisted? ? branch_path(branch) : branchs_path, data: {controller: "mask"} do |f| %>
    <h3 class="text-lg font-bold"><%= title %></h3>
    <hr class="left-0 absolute w-full mt-5 border-black">

    <section class="p-6 md:max-w-4xl">
      <div class="grid grid-cols-1 my-2">
        <%= render TextFieldComponent.new(form: f, field_name: :name, label: "Nome", error_message: branch.errors.messages[:branch]) %>
        <%= render TextFieldComponent.new(form: f, field_name: :discount_request, label: "Repetições %", data: { mask_target: "percentageMask" }, error_message: branch.errors.messages[:discount_request]) %>
      </div>

      <hr class="left-0 absolute w-full mt-5 border-black">

      <%= render ButtonComponent.new(form: f, label: btn_save) %>
    </section>
  <% end %>
<% end %>
