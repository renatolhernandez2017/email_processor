<h2>(-) Pagamento para representantes</h2>

<ul class="menu rounded-box my-5">
  <li>
    <ul class="border-l-2 border-b-2 border-primary my-5">
      <table class="xl:table-auto lg:table-xs w-full">
        <thead class="xl:text-base lg:text-sm">
          <tr>
            <th>Representante</th>
            <th>Qt. receitas</th>
            <th>Valor parceria</th>
          </tr>
        </thead>

        <tbody>
          <% payments.each do |representative_name, monthly_reports| %>
            <tr class="bg-gray-200 border-t border-b border-black h-8">
              <td><%= representative_name %></td>
              <td><%= monthly_reports.sum(&:quantity) %></td>
              <td><%= number_to_currency(monthly_reports.sum(&:available_value)) %></td>
            </tr>
          <% end %>
        </tbody>

        <tfoot>
          <thead>
            <tr><th class="pt-10"></th></tr>
          </thead>

          <tbody>
            <tr class="bg-gray-200 border-t border-b border-black h-8">
              <td class="xl:text-base lg:text-sm font-semibold">Totais</td>
              <td><%= total_quantity %></td>
              <td><%= number_to_currency(total_value) %></td>
            </tr>
          </tbody>
        </tfoot>
      </table>
    </ul>
  </li>
</ul>
