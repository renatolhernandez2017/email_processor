<section class="flex flex-col p-5 mb-20">
  <div class="grid grid-cols-12 mx-10 mb-10">
    <div class="col-start-1 col-end-11">
      <h1 class="text-2xl font-bold text-primary text-center">Divis√£o de Notas por Representante</h1>
    </div>

    <div class="col-start-12">
      <%= link_to "Download PDF", download_pdf_closings_path(kind: "note_divisions"),
          target: "_blank", class: "btn btn-primary w-36"
      %>
    </div>
  </div>

  <% @representatives.each do |representative| %>
    <div class="card shadow-lg border border-primary p-5 mb-5">
      <label class="text-lg">
        <span class="text-primary">
          <%= representative.name.upcase %>
        </span>
      </label>

      <%= render "representatives/note_division", cashes: @total_in_cash[representative.id] %>
    </div>
  <% end %>
</section>
