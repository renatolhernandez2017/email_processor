<section class="flex flex-col mb-20">
  <%= render "sub_actions", title: "Depósitos em bancos", kind: "deposits_in_banks" %>

  <div class="my-10">
    <% @banks.each do |bank_name, current_accounts| %>
      <div class="card shadow-lg border border-primary p-5 mb-5">
        <label class="xl:text-lg lg:text-base">
          <span class="text-primary">
            <%= bank_name %>
          </span>
        </label>

        <ul class="menu rounded-box overflow-x-auto">
          <li>
            <ul class="border-l-2 border-b-2 border-primary my-5">
              <table class="xl:table-auto lg:table-xs w-full">
                <thead class="xl:text-base lg:text-sm font-semibold">
                  <tr>
                    <th>Representante ID</th>
                    <th>Agência</th>
                    <th>Conta</th>
                    <th>Favorecido</th>
                    <th>Valor Disponivel</th>
                    <th>Representante</th>
                  </tr>
                </thead>

                <tbody>
                  <% current_accounts.each do |current_account| %>
                    <tr class="bg-gray-200 border-t border-b border-black h-8">
                      <td><%= current_account.representative_id %></td>
                      <td><%= current_account.agency_number %></td>
                      <td><%= current_account.account_number %></td>
                      <td><%= current_account.favored %></td>
                      <td><%= number_to_currency(current_account.available_value) %></td>
                      <td><%= current_account.representative_name || "Unipharmus" %></td>
                    </tr>
                  <% end %>
                </tbody>

                <tfoot>
                  <thead>
                    <tr><th class="pt-10"></th></tr>
                  </thead>

                  <tbody>
                    <tr class="bg-gray-200 border-t border-b border-black h-8">
                      <td colspan="4" class="xl:text-base lg:text-sm font-semibold">Total</td>
                      <td colspan="2"><%= number_to_currency(current_accounts.sum(&:available_value)) %></td>
                    </tr>
                  </tbody>
                </tfoot>
              </table>
            </ul>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</section>
