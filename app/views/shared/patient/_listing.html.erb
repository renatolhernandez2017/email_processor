<div class="card border border-primary p-3 my-10">
  <div class="flex mb-5 gap-3 font-bold xl:text-base lg:text-sm">
    Representante: <span class="text-primary">
      <%= representative_name.upcase %>
    </span>

    em <span class="text-primary"><%= closing %></span>
  </div>

  <% prescribers.each do |prescriber| %>
    <ul class="menu rounded-box mb-4 overflow-x-auto">
      <li>
        <ul class="border-l-2 border-b-2 border-primary mb-5">
          <table class="xl:table-auto lg:table-xs w-full">
            <thead class="xl:text-base lg:text-sm font-semibold">
              <tr>
                <th>Pacientes</th>
                <th>Repetida</th>
                <th>Data de Entrada</th>
                <th>Data de Pagamento</th>
                <th>Valor</th>
                <th>Requisição ID</th>
                <th>Filial</th>
              </tr>
            </thead>

            <tbody>
              <div class="grid grid-rows-2 mb-7 gap-2 text-center border-b border-primary">
                <div class="grid grid-cols-3 xl:text-lg lg:text-base font-semibold">
                  <span>Prescritor</span>
                  <span>Situação</span>
                  <span>Envelope</span>
                </div>

                <div class="grid grid-cols-3 text-primary">
                  <span><%= link_to prescriber.name, prescriber_path(prescriber), class: "" %></span>
                  <span><%= prescriber.new_situation %></span>
                  <span><%= prescriber.envelope_number %></span>
                </div>
              </div>

              <% requests[prescriber.id].each do |request| %>
                <tr class="bg-gray-200 border-t border-b border-black h-10">
                  <td><%= request.patient_name %></td>
                  <td><%= request.repeat ? "-R" : "" %></td>
                  <td><%= request.entry_date.strftime("%d/%m/%y") %></td>
                  <td><%= set_payment_date(request) %></td>
                  <td><%= set_price(request) %></td>
                  <td><%= request.nrreq_id %></td>
                  <td><%= request.branch.name %></td>
                </tr>
              <% end %>
            </tbody>

            <%= render "shared/patient/foot", prescriber: prescriber %>
          </table>
        </ul>
      </li>
    </ul>
  <% end %>
</div>
