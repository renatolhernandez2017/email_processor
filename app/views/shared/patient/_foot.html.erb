<tfoot>
  <thead>
    <tr>
      <th colspan="3" class="font-semibold text-base pt-7">Quantidade</th>
      <th class="font-semibold text-base pt-7">Situação</th>
      <th class="font-semibold text-base pt-7">Envelope</th>
      <th class="font-semibold text-base pt-7">Valor Disponível</th>
    </tr>
  </thead>

  <tbody>
    <tr class="bg-gray-200 border-t border-b border-black h-10">
      <td colspan="3"><%= monthly_report.sum(&:quantity) %></td>
      <td><%= situation %></td>
      <td><%= envelope_number.to_s.rjust(5, "0") %></td>
      <td><%= number_to_currency(monthly_report.sum(&:available_value)) %></td>
    </tr>
  </tbody>
</tfoot>
